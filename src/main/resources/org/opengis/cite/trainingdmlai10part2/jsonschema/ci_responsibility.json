{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost:8000/ci_responsibility.json",
    "title": "CI_Responsibility",
    "type": "object",
    "required": [
        "role",
        "party"
    ],
    "properties": {
        "role": {
            "type": "string"
        },
        "extent": {
            "type": "array",
            "items": {
                "$ref": "./ex_extent.json"
            }
        },
        "party": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "./ci_individual.json"
                    },
                    {
                        "$ref": "./ci_organisation.json"
                    }
                ]
            },
            "minimum": 1
        }
    }
}