{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.0/json_schema/ex_spatialTemporalExtent.json",
    "title": "EX_SpatialTemporalExtent",
    "type": "object",
    "required": [
        "extent",
        "spatialExtent"
    ],
    "properties": {
        "extent": {
            "$ref": "./tm_primitive.json"
        },
        "verticalExtent": {
            "$ref": "./ex_verticalExtent.json"
        },
        "spatialExtent": {
            "oneOf": [
                {
                    "$ref": "./ex_boundingPolygon.json"
                },
                {
                    "$ref": "./ex_geographicBoundingBox.json"
                },
                {
                    "$ref": "./ex_geographicDescription.json"
                }
            ]
        }
    }
}