{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.0/json_schema/polygon.json",
    "title": "Polygon",
    "type": "object",
    "properties": {
        "description": {
            "type": "string"
        },
        "descriptionReference": {
            "type": "string"
        },
        "identifier": {
            "type": "string"
        },
        "name": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "exterior": {
            "type": "object",
            "required": [
                "LinearRing"
            ],
            "properties": {
                "LinearRing": {
                    "$ref": "./LinearRing.json"
                }
            }
        },
        "interior": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "LinearRing"
                ],
                "properties": {
                    "LinearRing": {
                        "$ref": "./LinearRing.json"
                    }
                }
            }
        }
    }
}